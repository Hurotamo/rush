{
	"compilerOptions": {
		"target": "es2020",
		// "target": "ES5",
		"module": "commonjs",
		// "module": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"lib": ["es2020", "dom"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@test/*": ["test/*"]
		},
		"types": ["node", "jest"]
	},
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

